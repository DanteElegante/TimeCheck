<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sucursal:"
            android:textColor="#007B7F"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />
/>

        <EditText
            android:id="@+id/sucursalInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Escribe la sucursal"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha:"
            android:textColor="#007B7F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/fechaInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Ej. 30/05/2025"
            android:inputType="date"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora:"
            android:textColor="#007B7F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/horaInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Ej. 14:30"
            android:inputType="time"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto:"
            android:textColor="#007B7F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/asuntoInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:hint="Ej. Robo, falla eléctrica, etc."
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:textColor="#007B7F"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/descripcionInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:background="@drawable/rounded_edittext"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:hint="Describe con más detalle lo ocurrido"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puedes adjuntar texto, foto o video"
            android:textColor="#007B7F"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:id="@+id/imagenAdjunta"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="#CCCCCC"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <Button
                android:id="@+id/camaraBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Cámara"
                android:textColor="#FFFFFF"
                android:backgroundTint="#003344"
                android:textSize="16sp" />

            <Button
                android:id="@+id/galeriaBtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Galería"
                android:layout_marginStart="12dp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#003344"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/enviarBtn"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="Enviar"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#003344"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>

