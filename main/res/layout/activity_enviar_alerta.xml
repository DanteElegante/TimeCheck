<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- TÃ­tulo del tipo de alerta -->
        <TextView
            android:id="@+id/tipoAlertaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alerta"
            android:textColor="#FFFFFF"
            android:background="#007B7F"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="12dp" />

        <!-- RevisiÃ³n -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <CheckBox
                android:id="@+id/checkRevisado"
                android:text="@string/revisado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/estadoCheck"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp" />

            <Button
                android:id="@+id/btnFotoCheck"
                android:text="@string/tomar_foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#003344"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnGuardarCheck"
                android:text="@string/guardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#003344"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Imagen para evidencia -->
        <TextView
            android:text="@string/checar_extintor"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <ImageView
            android:id="@+id/imagenAdjunta"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#CCCCCC"
            android:scaleType="centerCrop"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnGaleria"
            android:text="GalerÃ­a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#003344"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnCamara"
            android:text="CÃ¡mara ðŸ“·"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#003344"
            android:textColor="#FFFFFF" />

        <!-- BotÃ³n para enviar alerta -->
        <Button
            android:id="@+id/btnEnviarAlerta"
            android:text="@string/enviar_informe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#003344"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>

