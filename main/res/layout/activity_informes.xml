<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Encabezado -->
    <TextView
        android:text="Informes"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#007B7F"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Filtros -->
    <RadioGroup
        android:id="@+id/filterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center">

        <!-- RadioButtons con layout_width y layout_height definidos -->
        <RadioButton
            android:id="@+id/filtroTodos"
            android:text="Todos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/filtroMantenimiento"
            android:text="Mantenimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/filtroSeguridad"
            android:text="Seguridad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <!-- Lista de informes -->
    <LinearLayout
        android:id="@+id/listaInformes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Los botones de los informes se agregan dinámicamente aquí -->
    </LinearLayout>
</LinearLayout>

